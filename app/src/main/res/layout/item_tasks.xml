<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_6sdp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_6sdp"
        android:paddingHorizontal="@dimen/_8sdp">

        <TextView
            android:id="@+id/titleView"
            style="@style/headingStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:maxLines="3"
            app:layout_constraintEnd_toStartOf="@+id/statusIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Title" />

        <ImageView
            android:id="@+id/statusIcon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:visibility="gone"
            android:src="@drawable/btn_unresolved"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/titleView"
            app:layout_constraintBottom_toBottomOf="@+id/titleView"/>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/_3sdp"
            android:background="@color/color_grey"
            app:layout_constraintEnd_toEndOf="@+id/titleView"
            app:layout_constraintStart_toStartOf="@+id/titleView"
            app:layout_constraintTop_toBottomOf="@+id/titleView" />

        <TextView
            android:id="@+id/dueDateTitle"
            style="@style/subHeadingStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="@string/due_date"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/daysLeftTitle"
            app:layout_constraintStart_toStartOf="@+id/titleView"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <TextView
            android:id="@+id/daysLeftTitle"
            style="@style/subHeadingStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="end"
            android:text="@string/days_left"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/dueDateTitle"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintTop_toTopOf="@+id/dueDateTitle" />

        <TextView
            android:id="@+id/dueDateView"
            style="@style/headingStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            app:layout_constraintEnd_toStartOf="@+id/daysLeftTitle"
            app:layout_constraintStart_toStartOf="@+id/titleView"
            app:layout_constraintTop_toBottomOf="@+id/dueDateTitle"
            tools:text="Due date" />

        <TextView
            android:id="@+id/daysLeftView"
            style="@style/headingStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/dueDateView"
            app:layout_constraintTop_toBottomOf="@+id/daysLeftTitle"
            app:layout_constraintTop_toTopOf="@+id/dueDateView"
            tools:text="Days left" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>